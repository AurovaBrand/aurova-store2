<style>
/* ---------------- GLOBAL ---------------- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Helvetica, Arial, sans-serif;
}

body {
  overflow-x: hidden;
}

/* ---------------- FLOATING BUY BUTTON ---------------- */
.floating-buy {
  position: fixed;
  bottom: 25px;
  left: 50%;
  transform: translateX(-50%);
  background: #0A2A66;
  color: white;
  padding: 18px 50px;
  border-radius: 50px;
  font-weight: 600;
  letter-spacing: 1px;
  z-index: 9999;
  text-decoration: none;
  transition: all 0.3s ease;
}

.floating-buy:hover {
  background: black;
}

/* ---------------- ROTATING BANNER ---------------- */
.top-banner {
  width: 100%;
  background: #0A2A66;
  color: #0A2A66;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 12px;
  position: relative;
  animation: slowRotate 25s linear infinite;
}

.top-banner img {
  height: 35px;
  margin-right: 15px;
}

.top-banner span {
  font-weight: 700;
  font-size: 18px;
}

@keyframes slowRotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* ---------------- HERO SECTION ---------------- */
.hero {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.hero img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 30px;
}

.hero-text {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 52px;
  font-weight: 700;
  text-align: center;
  z-index: 2;
}

.overlay-dim {
  position: absolute;
  width: 100%;
  height: 100%;
  background: black;
  opacity: 0;
  transition: opacity 0.4s ease;
  top: 0;
}

/* ---------------- GENERAL SECTION ---------------- */
.section {
  padding: 120px 10%;
  text-align: center;
}

.section h2 {
  font-size: 42px;
  margin-bottom: 30px;
}

.section p {
  font-size: 18px;
  max-width: 800px;
  margin: auto;
  line-height: 1.6;
}

.section img {
  width: 100%;
  max-width: 900px;
  margin-top: 60px;
  border-radius: 30px;
}

/* ---------------- PRODUCT EMBED ---------------- */
.product-section {
  padding: 120px 10%;
}

/* ---------------- BLACK FEATURE SECTION ---------------- */
.black-section {
  background: black;
  color: white;
  padding: 120px 10%;
  text-align: center;
}

.black-section h2 {
  font-size: 40px;
  margin-bottom: 30px;
}

/* ---------------- FEATURE GRID ---------------- */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20px;
  background: black;
  padding: 100px 5%;
}

.feature-box {
  position: relative;
  height: 100vh;
  overflow: hidden;
  border-radius: 25px;
}

.feature-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gradient-top {
  position: absolute;
  top: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to bottom, rgba(255,255,255,0.8), transparent);
  padding: 25px;
}

.gradient-top h3 {
  font-size: 20px;
  color: black;
}

.gradient-bottom {
  position: absolute;
  bottom: 30px;
  width: 100%;
  text-align: center;
  color: white;
  font-size: 14px;
}

/* ---------------- SPLIT ANIMATION ---------------- */
.split-section {
  background: black;
  color: white;
  text-align: center;
  padding: 150px 10%;
  position: relative;
}

.split-container {
  position: relative;
  height: 500px;
}

.split-half {
  position: absolute;
  width: 50%;
  transition: transform 1s ease;
}

.split-left {
  left: 0;
}

.split-right {
  right: 0;
}

/* ---------------- TESTIMONIALS ---------------- */
.testimonials {
  background: white;
  padding: 120px 10%;
}

.testimonials h2 {
  text-align: center;
  margin-bottom: 60px;
}

.testimonial-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 30px;
}

.testimonial-box {
  background: white;
  border-radius: 20px;
  padding: 25px;
  box-shadow: 0 0 0 1px rgba(0,0,0,0.08);
  min-height: 150px;
}

/* ---------------- CONTACT ---------------- */
.contact-section {
  background: black;
  color: white;
  text-align: center;
  padding: 120px 10%;
}

.contact-section small {
  display: block;
  margin-top: 30px;
  font-size: 10px;
  opacity: 0.7;
}

@media(max-width: 900px){
  .feature-grid,
  .testimonial-grid {
    grid-template-columns: 1fr;
  }
}
</style>

