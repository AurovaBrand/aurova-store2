<style>
/* ---------------- GLOBAL ---------------- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: Helvetica, Arial, sans-serif;
}

body {
  overflow-x: hidden;
}

/* ---------------- FLOATING BUY BUTTON ---------------- */
.floating-buy {
  position: fixed;
  bottom: 25px;
  left: 50%;
  transform: translateX(-50%) translateY(120px);
  background: #0A2A66;
  color: white;
  padding: 16px 45px;
  border-radius: 50px;
  font-weight: 600;
  letter-spacing: 1px;
  z-index: 9999;
  text-decoration: none;
  transition: all 0.4s ease;
  opacity: 0;
}

.floating-buy.visible {
  transform: translateX(-50%) translateY(0);
  opacity: 1;
}

.floating-buy:hover {
  background: black;
}

/* ---------------- SCROLLING BANNER ---------------- */
.top-banner {
  width: 100%;
  background: #0A2A66;
  color: white;
  overflow: hidden;
  position: relative;
}

/* subtle edge fade */
.top-banner::before,
.top-banner::after {
  content: "";
  position: absolute;
  top: 0;
  width: 120px;
  height: 100%;
  z-index: 2;
  pointer-events: none;
}

.top-banner::before {
  left: 0;
  background: linear-gradient(to right, #0A2A66, transparent);
}

.top-banner::after {
  right: 0;
  background: linear-gradient(to left, #0A2A66, transparent);
}

.banner-track {
  display: flex;
  align-items: center;
  gap: 60px;
  width: max-content;
  animation: scrollText 30s linear infinite; /* slower + premium */
}

.top-banner:hover .banner-track {
  animation-play-state: paused;
}

.banner-track span {
  font-weight: 700;
  font-size: 16px;
  letter-spacing: 1px;
}


.banner-track img {
  height: 22px;
  width: auto;
  animation: logoPulse 3s ease-in-out infinite;
}

@keyframes scrollText {
  from { transform: translateX(0); }
  to { transform: translateX(-50%); }
}

@keyframes logoPulse {
  0%, 100% { transform: scale(1); opacity: 0.9; }
  50% { transform: scale(1.1); opacity: 1; }
}
/* ---------------- HERO ---------------- */
.hero {
  position: relative;
  height: 100vh;
  overflow: hidden;
}

.hero img {
  width: 100%;
  height: 110%;
  object-fit: cover;
  transform: translateY(0);
  transition: transform 0.2s linear;
}

.hero-text {
  position: absolute;
  top: 45%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: clamp(28px, 5vw, 56px);
  font-weight: 700;
  text-align: center;
  width: 90%;
  z-index: 2;
}

/* ---------------- SECTIONS ---------------- */
.section {
  padding: 120px 10%;
  text-align: center;
}

.section h2 {
  font-size: clamp(26px, 4vw, 42px);
  margin-bottom: 30px;
}

.section p {
  font-size: 18px;
  max-width: 800px;
  margin: auto;
  line-height: 1.6;
}

.section img {
  width: 100%;
  max-width: 900px;
  margin-top: 60px;
  border-radius: 30px;
}

/* ---------------- PRODUCT SECTION ---------------- */
.product-section {
  padding: 120px 10%;
  text-align: center;
}

.product-section select,
.product-section button {
  padding: 12px 20px;
  border-radius: 30px;
  border: 1px solid #ccc;
  margin: 10px;
}

.product-section button {
  background: #0A2A66;
  color: white;
  border: none;
  cursor: pointer;
  transition: background 0.3s ease;
}

.product-section button:hover {
  background: black;
}

/* ---------------- BLACK SECTION ---------------- */
.black-section {
  background: black;
  color: white;
  padding: 120px 10%;
  text-align: center;
}

/* ---------------- FEATURE GRID ---------------- */
.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
  background: black;
  padding: 100px 5%;
}

.feature-box {
  position: relative;
  height: 500px;
  overflow: hidden;
  border-radius: 25px;
}

.feature-box img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.gradient-top {
  position: absolute;
  top: 0;
  width: 100%;
  height: 40%;
  background: linear-gradient(to bottom, rgba(255,255,255,0.9), transparent);
  padding: 25px;
}

.gradient-top h3 {
  font-size: 20px;
  color: black;
}

/* ---------------- SPLIT SECTION ---------------- */
.split-section {
  background: black;
  color: white;
  text-align: center;
  padding: 150px 10%;
}

.split-container {
  position: relative;
  height: 500px;
}

.split-half {
  position: absolute;
  width: 50%;
  transition: transform 1s ease;
}

/* ---------------- FADE IN ---------------- */
.fade-in {
  opacity: 0;
  transform: translateY(40px);
  transition: all 1s ease;
}

.fade-in.visible {
  opacity: 1;
  transform: translateY(0);
}

/* ---------------- TESTIMONIALS ---------------- */
.testimonials {
  background: white;
  padding: 120px 10%;
}

.testimonial-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 30px;
}

.testimonial-box {
  background: white;
  border-radius: 20px;
  padding: 25px;
  box-shadow: 0 0 0 1px rgba(0,0,0,0.08);
}

/* ---------------- CONTACT ---------------- */
.contact-section {
  background: black;
  color: white;
  text-align: center;
  padding: 120px 10%;
}

/* ---------------- MOBILE ---------------- */
@media(max-width: 768px){
  .hero {
    height: 80vh;
  }

  .split-container {
    height: 300px;
  }
}
</style>

<!-- FLOATING BUY -->
<a href="/products/your-product-handle" class="floating-buy" id="floatingBuy">BUY NOW</a>

<!-- BANNER -->
<div class="top-banner">
  <div class="banner-track">
    <span>LIMITED TIME FLASH SALE</span>
    <span>LIMITED TIME FLASH SALE</span>
    <span>LIMITED TIME FLASH SALE</span>
  </div>
</div>

<!-- HERO -->
<div class="hero">
  <img src="SECOND_REFERENCE_IMAGE_URL" id="heroImage">
  <div class="hero-text fade-in">Because everyone hears differently</div>
</div>

<!-- SECTION -->
<div class="section fade-in">
  <h2>The speaker that you need. With two as one.</h2>
  <p>
    Our speaker increases satisfaction with powerful immersive audio.
    Designed to split and unite, it fills every space with rich sound.
  </p>
  <img src="THIRD_REFERENCE_IMAGE_URL">
</div>

<!-- PRODUCT -->
<div class="product-section fade-in">
  {% assign product = all_products['your-product-handle'] %}
  {% if product %}
    {% form 'product', product %}
      <h2>{{ product.title }}</h2>
      <p>{{ product.price | money }}</p>
      <select name="id">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">{{ variant.title }}</option>
        {% endfor %}
      </select>
      <button type="submit">Add to Cart</button>
    {% endform %}
  {% endif %}
</div>

<!-- SPLIT -->
<div class="split-section fade-in">
  <h2>Designed to separate. Built to unite.</h2>
  <div class="split-container">
    <img src="SPLIT_LEFT_IMAGE_URL" class="split-half" id="leftHalf">
    <img src="SPLIT_RIGHT_IMAGE_URL" class="split-half" id="rightHalf" style="right:0;">
  </div>
</div>

<!-- TESTIMONIALS -->
<div class="testimonials fade-in">
  <h2>Testimonials</h2>
  <div class="testimonial-grid">
    {% for i in (1..6) %}
      <div class="testimonial-box">
        Add testimonial here via theme editor.
      </div>
    {% endfor %}
  </div>
</div>

<!-- CONTACT -->
<div class="contact-section fade-in">
  <h4>Further questions? aurovasound@gmail.com or @aurovasound on instagram</h2>
</div>

<script>
document.addEventListener("DOMContentLoaded", function(){

  const heroImg = document.getElementById("heroImage");
  const floatingBuy = document.getElementById("floatingBuy");
  const left = document.getElementById("leftHalf");
  const right = document.getElementById("rightHalf");

  // PARALLAX
  window.addEventListener("scroll", () => {
    let scrollY = window.scrollY;
    heroImg.style.transform = "translateY(" + scrollY * 0.3 + "px)";

    if(scrollY > 500){
      floatingBuy.classList.add("visible");
    } else {
      floatingBuy.classList.remove("visible");
    }
  });

  // FADE IN OBSERVER
  const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if(entry.isIntersecting){
        entry.target.classList.add("visible");
      }
    });
  }, { threshold: 0.2 });

  document.querySelectorAll(".fade-in").forEach(el => observer.observe(el));

  // SPLIT ANIMATION OBSERVER
  const splitObserver = new IntersectionObserver(entries => {
    entries.forEach(entry => {
      if(entry.isIntersecting){
        left.style.transform = "translateX(-120px)";
        right.style.transform = "translateX(120px)";
      }
    });
  }, { threshold: 0.5 });

  splitObserver.observe(document.querySelector(".split-section"));

});
</script>
