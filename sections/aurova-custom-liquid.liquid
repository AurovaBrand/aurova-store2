<script>
window.addEventListener("scroll", function(){
  let scroll = window.scrollY;
  let heroDim = document.getElementById("heroDim");
  heroDim.style.opacity = scroll / 600;

  let left = document.getElementById("leftHalf");
  let right = document.getElementById("rightHalf");

  if(scroll > 2500){
    left.style.transform = "translateX(-120px)";
    right.style.transform = "translateX(120px)";
  } else {
    left.style.transform = "translateX(0)";
    right.style.transform = "translateX(0)";
  }
});
</script>
